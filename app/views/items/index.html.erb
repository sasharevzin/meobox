<p id="notice"><%= notice %></p>

<h1>Items Listings</h1>

  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= image_tag item.image %>
          <div class="caption">
            <h3><%= item.title %></h3>
            <p><%= item.description %></p>
            <p><%= number_to_currency(item.price) %></p>
            <p><%= item.size %></p>
            <p><%= item.url %></p>
            <%= link_to 'Show', item_path(item), class: "btn btn-link" %>
            <%= link_to 'Edit', edit_item_path(item), class: "btn btn-link" %>
            <%= link_to 'Destroy', item_path(item), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<br>

<%= link_to 'New Item', new_item_path, class: "btn btn-link" %>
