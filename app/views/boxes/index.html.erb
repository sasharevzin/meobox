<p id="notice"><%= notice %></p>

<h1>Listing Boxes</h1>
  <div class="row">
    <% @boxes.each do |box| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= box.plan.name %>
          <div class="caption">
            <h3><%= box.theme_title %></h3>
            <p><%= box.starts_at %></p>
          </div>
          <div class="panel-footer">
            <% if @plan %>
              <%= link_to 'Show', plan_box_path(@plan, box), class: "btn btn-link" %>
              
              <br>
            <% else %>
               <%= link_to 'Show', box_path(box), class: "btn btn-link" %>
              
               <br>
             
            <% end %>
          </div><!-- panel footer -->
          
        </div><!-- thumbnail -->
      </div><!-- col-md-3 -->
    <% end %>
     <%= link_to 'New Box', new_box_path, class: "btn btn-link" %>
  </div><!-- row -->
