<p id="notice"><%= notice %></p>

<h1>Listing Boxes</h1>

<table>
  <thead>
    <tr>
      <th>Plan Name</th>
      <th>Month</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boxes.each do |box| %>
      <tr>
        <td><%= box.plan.name %></td>
        <td><%= box.month %></td>
        <td><%= link_to 'Show', plan_box_path(@plan, box) %></td>
        <td><%= link_to 'Edit', edit_plan_box_path(@plan, box) %></td>
        <td><%= link_to 'Destroy', plan_box_path(@plan, box), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Box', new_plan_box_path(@plan) %>
