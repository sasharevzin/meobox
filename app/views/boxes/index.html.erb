<p id="notice"><%= notice %></p>

<h1>Listing Boxes</h1>
  <div class="row">
    <% @boxes.each do |box| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= box.plan.name %>
          <div class="caption">
            <h3><%= box.theme_title %></h3>
            <p><%= box.starts_at %></p>
          </div>
          <div class="panel-footer">
            <%= link_to 'Show', plan_box_path(@plan, box), class: "btn btn-link" %>
            <%= link_to 'Edit', edit_plan_box_path(@plan, box), class: "btn btn-link" %>
            <%= link_to 'Destroy', plan_box_path(@plan, box), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
          </div><!-- panel footer -->
        </div><!-- thumbnail -->
      </div><!-- col-md-3 -->
    <% end %>
  </div><!-- row -->

<br>

<%= link_to 'New Box', new_plan_box_path(@plan), class: "btn btn-link" %>


