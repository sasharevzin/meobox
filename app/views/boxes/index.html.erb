<p id="notice"><%= notice %></p>

<h1>Listing Boxes</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">Plan Name</th>
      <th colspan="3">Date</th>
      <th colspan="3">Theme Name</th>
    </tr>
  </thead>

  <tbody>
    <% @boxes.each do |box| %>
      <div class="panel panel default">
        <tr class="panel heading">
          <td class="panel-title">
            <%= box.plan.name %>
          </td>
        </div>
        <div class="panel-body">
          <td><%= box.starts_at %></td>
        </div>
        <div class="panel-body">
          <td><%= box.theme_title %></td>
        </div>
        <div class="panel-footer">
          <td><%= link_to 'Show', plan_box_path(@plan, box) %></td>
          <td><%= link_to 'Edit', edit_plan_box_path(@plan, box) %></td>
          <td><%= link_to 'Destroy', plan_box_path(@plan, box), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </div>
        </tr>
      </div>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Box', new_plan_box_path(@plan) %>
