<header>
  <h1><%= pluralize(@users.size, 'User') %></h1>
</header>

<ul>
  <% @users.each do |user| %>
    <li>
      User First Name: <%= link_to user.first_name, user %> 
       <%= image_tag user.avatar.url(:thumb) %>
      <% if user.plan.present? %>
        Plan: <%= user.plan.name %>
       <% end %>
    </li>
  <% end %>
</ul>