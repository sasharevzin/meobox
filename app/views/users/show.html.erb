<article>

  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= @user.first_name %>
          <%= @user.email%>
          <%= @user.plan.name %>
        </h1>
      </section>
    </aside>
  </div>

  <footer>
    <nav>
      <% if current_user?(@user) %>
        <%= link_to "Edit Account", edit_user_path(@user), class: "button" %>
        <%= link_to "Delete Account", @user, 
                    method: :delete, 
                    data: { confirm: "Are you sure?" }, 
                    class: "button" %> 
      <% end %>
    </nav>
  </footer>
</article>