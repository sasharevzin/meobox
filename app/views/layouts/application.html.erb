<!DOCTYPE html>
<html>
<head>
  <title>Meowbox</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default navbar-static-top" role="navigation">
    <div class='container'>
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <%= link_to 'Meowbox', root_path, class: 'navbar-brand' %>
      </div>
      <div class="collapse navbar-collapse" id="main-nav-collapse">
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            Signed in as <%= current_user.email %> | <%= button_to "Log out", sign_out_path, method: :delete, class: 'btn btn-primary navbar-btn' %>
          <% else %>
            <%= link_to "Log in", sign_in_path, class: 'btn btn-primary navbar-btn', method: :get %> | <%= link_to "Sign up", sign_up_path, class: 'btn btn-success navbar-btn', method: :get %>
          <% end %>
          <li><%= link_to "About", about_path %></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div>
  </nav>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
